@model IEnumerable<POSSystem.Models.SalesProductView>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

    @{int i = -1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <button type="button" class="minus-quatity" id="dec-@item.ID" onclick="removeProductInSale(@item.ID)">-</button>
                @Html.DisplayFor(modelItem => item.Quantity)
                <button type="button" class="plus-quatity" id="inc-@item.ID" onclick="addProductInSale(@item.ID);">+</button>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
                <input type="hidden" class="total-cost" value="@item.Total" />
            </td>
            <td>
                <input type="hidden" name="ProductIDs[@i++]" id="ProductIDs[@i++]" value="@item.ID" />
            </td>
        </tr>
    }

</table>
